{
    "name": "Schleuder",
    "id": "schleuder",
    "packaging_format": 1,
    "version": "0.0.1-ynh4",
    "description": {
        "en": "Schleuder crypted mailinglist manager.",
        "fr": "Gestionnaire de liste de diffusion chiffré."
    },
    "version": "0.01~ynh1",
    "url": "https://schleuder.org/",
    "license": "GPL-3.0",
    "maintainer": {
        "name": "CyBerNetX",
        "email": "cybernetx@cybermazout.net"
    },
    "requirements": {
        "yunohost": ">= 4.0.6"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "schleuder",
        "schleuder-web"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for schleuder",
                    "fr": "Choisissez un nom de domaine pour schleuder"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for schleuder",
                    "fr": "Choisissez un chemin pour schleuder"
                },
                "example": "/schleuder",
                "default": "/schleuder"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "use_web_account",
                "type": "boolean",
                "ask": {
                    "en": "Allow account creation via the schleuder web interface?",
                    "fr": "Autoriser la création de compte via l'interface web de schleuder ?"
                },
                "default": false
            }
        ]
    }
}
