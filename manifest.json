{
    "name": "Schleuder Web",
    "id": "schleuder-web",
    "packaging_format": 1,
    "description": {
        "en": "Crypted mailing list",
        "fr": "Gerer des listes de diffusion chiffre"
    },
    "version": "0.0.1~ynh",
    "license": "GPL-3.0-or-later",
    "url": "https://github.com/CyBerNetX/schleuder_ynh",
    "upstream": {
        "license": "GPL-3.0-or-later",
        "website": "https://github.com/CyBerNetX/schleuder_ynh"
    },
    "maintainer": {
        "name": "CyBerNetX",
        "email": "cybernetx@cybermazout.net"
    },
    "requirements": {
        "yunohost": ">= 4.2.0"
    },
    "multi_instance": false,
    "services": [
        "schleuder"
	"schleuder-web"
	"schleuder-api-daemon"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/schleuder",
                "default": "/schleuder"
            },
            {
                "name": "redirect_path",
                "type": "string",
                "ask": {
                    "en": "Redirect destination path",
                    "fr": "Emplacement de destination"
                },
                "example": "http://127.0.0.1:3000/app/",
                "default": "http://127.0.0.1:3000/"
            },
            {
                "name": "redirect_type",
                "type": "string",
                "ask": {
                    "en": "Redirect type",
                    "fr": "Type de redirection"
                },
                "choices": {
                 // "public_302": "Visible redirect (302, temporary). Everybody will be able to access it.",
                 // "public_301": "Visible redirect (301, permanent). Everybody will be able to access it.",
                  "public_proxy": "Proxy, invisible (NGINX proxy_pass). Everybody will be able to access it.",
                 // "private_proxy": "Proxy, invisible (NGINX proxy_pass). Only accessible for allowed users."
                },
                "default": "public_proxy"
            }
        ]
    }
}
